<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Create New Animal</h3>
<p>
  <!-- Input area for new animal -->
  <div class="field">
    <label for="animal_name">Name</label>
    <input type="text" name="animal[name]" id="animal_name" />
    <label for="animal_latin_name">Latin Name</label>
    <input type="text" name="animal[latin_name]" id="animal_latin_name" />
    <label for="animal_kingdom">Kingdom</label>
    <input type="text" name="animal[kingdom]" id="animal_kingdom" />
  </div>
</div>
<button id="add_new_animal_button">Add New Animal</button>

</p>
